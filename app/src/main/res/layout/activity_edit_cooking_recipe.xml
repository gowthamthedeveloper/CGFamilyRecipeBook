<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.recipes.EditCookingRecipeMethodActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEditCookingRecipeSave"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewChef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center"
                android:text="CHEF"
                android:textColor="@color/blueRibbon"
                android:textStyle="bold"
                android:textSize="@dimen/dp_20"
                android:fontFamily="@font/opensans_semibold"/>
            <TextView
                android:id="@+id/textViewTitlePreparationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center"
                android:text="PREPARATION TIME: "
                android:textSize="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@+id/textViewChef"
                android:fontFamily="@font/opensans_semibold"/>

            <EditText
                android:id="@+id/textViewPreparationTime"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:textSize="@dimen/dp_18"
                android:padding="@dimen/dp_5"
                android:background="@color/field_shade"
                android:fontFamily="@font/opensans_semibold"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitlePreparationTime"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text=""
                />

            <TextView
                android:id="@+id/textViewTitleIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/textViewPreparationTime"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="INGREDIENTS:"
                android:textSize="@dimen/dp_15"
                android:fontFamily="@font/opensans_semibold"/>
            <Switch
                android:id="@+id/ingredientsTextTypeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textViewPreparationTime"
                app:layout_constraintBottom_toTopOf="@+id/textViewIngredients"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/dp_10"/>
            <EditText
                android:id="@+id/textViewIngredients"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_18"
                android:inputType="textCapWords|textMultiLine"
                android:maxLines="20"
                android:minHeight="@dimen/dp_50"
                android:padding="@dimen/dp_5"
                android:singleLine="false"
                android:background="@color/field_shade"
                android:fontFamily="@font/opensans_semibold"
                app:layout_constraintTop_toBottomOf="@id/textViewTitleIngredients"
                app:layout_constraintRight_toRightOf="parent"
                android:text=""
                />
            <TextView
                android:id="@+id/textViewTitleMethods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/textViewIngredients"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="METHODS:"
                android:textSize="@dimen/dp_15"
                android:fontFamily="@font/opensans_semibold"/>
            <Switch
                android:id="@+id/methodTextTypeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textViewIngredients"
                app:layout_constraintBottom_toTopOf="@+id/textViewMethods"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/dp_10"/>
            <EditText
                android:id="@+id/textViewMethods"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_18"
                android:inputType="textCapWords|textMultiLine"
                android:minHeight="@dimen/dp_50"
                android:maxLines="50"
                android:singleLine="false"
                android:padding="@dimen/dp_5"
                android:background="@color/field_shade"
                android:fontFamily="@font/opensans_semibold"
                app:layout_constraintTop_toBottomOf="@id/textViewTitleMethods"
                android:text=""
                />

            <TextView
                android:id="@+id/textViewTitleTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="IMPORTANT NOTE:"
                android:textSize="@dimen/dp_15"
                android:fontFamily="@font/opensans_semibold"
                app:layout_constraintTop_toBottomOf="@id/textViewMethods"
                />
            <Switch
                android:id="@+id/noteTextTypeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/textViewMethods"
                app:layout_constraintBottom_toTopOf="@+id/textViewTips"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/dp_10"/>
            <EditText
                android:id="@+id/textViewTips"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_18"
                android:minHeight="@dimen/dp_50"
                android:background="@color/field_shade"
                android:maxLines="15"
                android:padding="@dimen/dp_5"
                android:inputType="textCapSentences|textMultiLine"
                android:fontFamily="@font/opensans_semibold"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitleTips"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEditCookingRecipeSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/transparent"
        android:text="Save"
        android:textColor="@color/dv_red"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_35"
        android:onClick="btnSaveCookingRecipeDetailsOnClick"/>

    <LinearLayout
        android:id="@+id/loadingpanelmask_editCookingRecipereport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.85"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loadingPanel_editCookingRecipereport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progressbar_custom" />

        <TextView
            android:id="@+id/loadingCapt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Firing up"
            android:singleLine="false"
            android:textColor="#96908f"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/opensans_regular"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>