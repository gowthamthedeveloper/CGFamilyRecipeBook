<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewNewTag"
        android:layout_width="5dp"
        android:layout_height="@dimen/dp_50"
        android:backgroundTint="@color/newtag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"
        android:background="@color/newtag"/>

    <TextView
        android:id="@+id/textViewCategoryName"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/viewNewTag"
        android:text="Recipe_Category"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/imageViewRecipe"
        android:layout_width="20dp"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/recipe"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textViewCategoryName"/>

     <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_1"
         app:layout_constraintTop_toBottomOf="@+id/textViewCategoryName"
         android:background="@color/black_op_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>